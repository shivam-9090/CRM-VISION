# =================================
# RAILWAY PRODUCTION CONFIGURATION
# =================================
# This file is optimized for Railway deployment
# Copy values to Railway Variables dashboard

# ---------------------------------
# DATABASE (Auto-configured by Railway)
# ---------------------------------
# Railway auto-generates this when you add PostgreSQL service
# In Railway: Reference as ${{Postgres.DATABASE_URL}}
DATABASE_URL="postgresql://postgres:password@localhost:5432/crm_db"

# ---------------------------------
# JWT AUTHENTICATION
# ---------------------------------
# Generate secure key using: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET="your-super-secret-jwt-key-replace-this"
JWT_EXPIRATION=7d

# ---------------------------------
# SERVER CONFIGURATION
# ---------------------------------
NODE_ENV=production
PORT=3001

# ---------------------------------
# FRONTEND URL (CORS)
# ---------------------------------
# Update this to your actual frontend domain
FRONTEND_URL=https://your-frontend-url.com


# ---------------------------------
# EMAIL (SMTP) - Gmail Configuration
# ---------------------------------
# For Gmail: Use App Password (https://myaccount.google.com/apppasswords)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password

# ---------------------------------
# REDIS (Optional - Auto-configured by Railway)
# ---------------------------------
# Railway auto-generates this when you add Redis service
# In Railway: Reference as ${{Redis.REDIS_URL}}
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ---------------------------------
# ERROR TRACKING (Optional)
# ---------------------------------
# Sentry DSN for error monitoring (https://sentry.io)
SENTRY_DSN=""

# =================================
# RAILWAY DEPLOYMENT NOTES
# =================================
# 1. Set these variables in Railway Dashboard → Service → Variables
# 2. DATABASE_URL: Auto-provided, reference as ${{Postgres.DATABASE_URL}}
# 3. REDIS_URL: Auto-provided if you add Redis, reference as ${{Redis.REDIS_URL}}
# 4. Never commit .env file to Git
# 5. Generate strong JWT_SECRET before deploying
# =================================
