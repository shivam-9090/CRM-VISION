# AWS Production Environment Variables
# Copy this file to .env.aws and fill in your values

# Database Configuration
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@postgres:5432/crm_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=GENERATE_STRONG_PASSWORD_HERE
POSTGRES_DB=crm_db

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=GENERATE_RANDOM_STRING_HERE_MIN_32_CHARS
JWT_EXPIRATION=7d

# Application Configuration
NODE_ENV=production
PORT=3001
FRONTEND_URL=http://YOUR_EB_ENVIRONMENT_URL

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://YOUR_EB_ENVIRONMENT_URL:3001/api

# Email Configuration (Optional - configure later)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourcompany.com

# AWS Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-crm-uploads-bucket

# Security
CORS_ORIGIN=http://YOUR_EB_ENVIRONMENT_URL

# Session
SESSION_SECRET=GENERATE_ANOTHER_RANDOM_STRING_HERE
