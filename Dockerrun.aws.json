{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "postgres",
      "image": "postgres:15-alpine",
      "essential": true,
      "memory": 512,
      "environment": [
        {
          "name": "POSTGRES_DB",
          "value": "crm_db"
        },
        {
          "name": "POSTGRES_USER",
          "value": "postgres"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "value": "REPLACE_WITH_YOUR_PASSWORD"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "postgres_data",
          "containerPath": "/var/lib/postgresql/data"
        }
      ]
    },
    {
      "name": "redis",
      "image": "redis:7-alpine",
      "essential": true,
      "memory": 256,
      "mountPoints": [
        {
          "sourceVolume": "redis_data",
          "containerPath": "/data"
        }
      ]
    },
    {
      "name": "backend",
      "image": "YOUR_ECR_REPO/crm-backend:latest",
      "essential": true,
      "memory": 1024,
      "links": [
        "postgres",
        "redis"
      ],
      "portMappings": [
        {
          "hostPort": 3001,
          "containerPort": 3001
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "DATABASE_URL",
          "value": "postgresql://postgres:REPLACE_WITH_YOUR_PASSWORD@postgres:5432/crm_db"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://redis:6379"
        },
        {
          "name": "JWT_SECRET",
          "value": "REPLACE_WITH_GENERATED_SECRET"
        },
        {
          "name": "JWT_EXPIRATION",
          "value": "7d"
        },
        {
          "name": "PORT",
          "value": "3001"
        }
      ]
    },
    {
      "name": "frontend",
      "image": "YOUR_ECR_REPO/crm-frontend:latest",
      "essential": true,
      "memory": 512,
      "links": [
        "backend"
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 3000
        }
      ],
      "environment": [
        {
          "name": "NEXT_PUBLIC_API_URL",
          "value": "http://backend:3001/api"
        },
        {
          "name": "NODE_ENV",
          "value": "production"
        }
      ]
    }
  ],
  "volumes": [
    {
      "name": "postgres_data",
      "host": {
        "sourcePath": "/var/app/postgres_data"
      }
    },
    {
      "name": "redis_data",
      "host": {
        "sourcePath": "/var/app/redis_data"
      }
    }
  ]
}
