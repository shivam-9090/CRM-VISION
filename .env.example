# ============================================
# DEVELOPMENT ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env for local development
# DO NOT use these values in production!

# Database Configuration
POSTGRES_DB=crm_dev
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_password_123

# Database URL (used by Prisma) with connection pooling
DATABASE_URL=postgresql://dev_user:dev_password_123@localhost:5432/crm_dev?connection_limit=10&pool_timeout=20

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Sentry Error Monitoring (optional in development)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# JWT Configuration
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_EXPIRES_IN=7d

# Server Configuration
NODE_ENV=development
PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Frontend Environment
NEXT_PUBLIC_API_URL=http://localhost:3001/api
